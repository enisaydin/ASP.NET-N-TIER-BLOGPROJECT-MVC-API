
@model BlogData.Entities.Article

@{
    ViewData["Title"] = "Delete Article";
}

<h2>Delete Article</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete the article titled <strong>@Model.Title</strong>?</p>
</div>

<form asp-action="DeleteArticleConfirmed">
    <input type="hidden" asp-for="ArticleId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Articles" class="btn btn-secondary">Cancel</a>
    </div>
</form>
