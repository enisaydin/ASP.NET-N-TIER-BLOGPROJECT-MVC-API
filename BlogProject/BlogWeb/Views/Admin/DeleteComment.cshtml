@model BlogData.Entities.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<h2>Delete Comment</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete the comment made by <strong>@Model.User.UserName</strong> on the article <strong>@Model.Article.Title</strong>?</p>
</div>

<form asp-action="DeleteCommentConfirmed">
    <input type="hidden" asp-for="ArticleId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Comments" class="btn btn-secondary">Cancel</a>
    </div>
</form>
